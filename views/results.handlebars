<!doctype html>

<html>
<head>
	<title>Buy Buddy</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">  

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/introHCI.js"></script>	
</head>

<body>
	<div class="container">	
		{{> appname}}

		<h4 style=";font-size:30px;" align="center"><b>Results</b></h4>
		<p align="center"> You added:
		{{#each obj}}
			<h3 align="center">{{item}} / ${{cost}} / {{wantNeed}}</h3>
			<h4 align="center">Date: {{date}}</h4>
			<p align="center">Note:&nbsp {{note}}</p>
			<hr>
		{{/each}}
		</p>
		
		<a href="/add%20purchase" class="thumbnail">
			<p style=";font-size:20px;" align="center"><b>Add Another Purchase</b></p>
		</a>
		<a href="/menu" class="thumbnail">
			<p style=";font-size:20px;" align="center"><b>Back To Main Menu</b></p>
		</a>
	</div>
</body>
</html>
