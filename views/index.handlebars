<body>
	<div class="container">
		<!-- h1 through h6 are headers. The higher the number, the smaller the header -->
		<!-- p means paragraph -->
		{{> appname}}
		<!-- <h4 style=";font-size:30px;" align="center"><b>Login</b></h4> -->
			<div class="project" id="Login">
			<div align="center">
				<label for="username">Username:</label>
				<input type="text" id="username" name="username">
			</div>
			<br>
			<div align="center">
				<label for="pass">Password:</label>
				<input type="password" id="pass" name="password" required>
			</div>
			<br>
				<a href="/menu" class="thumbnail">
					<p style=";font-size:20px;"><b>Login</b></p>
				</a>
			</div>
			
			<span class="facebookLogin">Or login through Facebook:</span>
			<fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
			</fb:login-button>
	</div>
</body>
</html>
