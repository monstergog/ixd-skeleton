		<div class='sumBlock'>
		<div align="center" style=";font-size:2vh;">
			<h3 style=";font-size:2vh;"><b>Summary Of Your Purchases:</b></h3>
			Total Amount Spent: $<span id='spent'></span><br>
			Total Amount Spent on Needs: $<span id='need'></span><br>
			Total Amount Spent on Wants: $<span id='want'></span><br>
		</div>
		
		<div id="donutchart"></div>
		</div>
				
		<script>
			var moneySpent = 0;
			var moneyNeed = 0;
			var moneyWant = 0;
			var index = 0;
			
			// Load google charts
			google.charts.load('current', {'packages':['corechart']});
			google.charts.setOnLoadCallback(drawChart);

			// Draw the chart and set the chart values
			function drawChart() {
			  var data = google.visualization.arrayToDataTable([
			  ['Type of Purchase', 'Dollars Spent'],
			  ['Needs', moneyNeed],
			  ['Wants', moneyWant],
			]);

			  // Optional; add a title and set the width and height of the chart
			  var options = {colors:['#f54e4e','#f5bb4e'],
							'fontSize':25,
							pieHole:0.4,
							legend: 'none',
							backgroundColor:{'fill':'lightgrey'},
							};

			  // Display the chart inside the <div> element with id="donutchart"
			  var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
			  chart.draw(data, options);
			}
		</script>